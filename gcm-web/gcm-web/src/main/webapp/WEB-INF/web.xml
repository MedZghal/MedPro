<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Gestion_Patient</servlet-name>
        <servlet-class>com.csys.gcm.servlet.Gestion_Patient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Gestion_Acces</servlet-name>
        <servlet-class>com.csys.gcm.servlet.Gestion_Acces</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Consultation</servlet-name>
        <servlet-class>com.csys.gcm.servlet.Consultation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Recette</servlet-name>
        <servlet-class>com.csys.gcm.servlet.Recette</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Gestion_Patient</servlet-name>
        <url-pattern>/Gestion_Patient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gestion_Acces</servlet-name>
        <url-pattern>/Gestion_Acces</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consultation</servlet-name>
        <url-pattern>/Consultation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Recette</servlet-name>
        <url-pattern>/Recette</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>jdbcgcm</description>
        <res-ref-name>jdbc/gcm</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
